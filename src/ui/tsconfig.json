{
  "compilerOptions": {
    "rootDir": "../../",
    "target": "ES2020",
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Linting */
    "strict": true,
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./*"],
      "@commonTypes": ["../common/types.ts"]
    }
  },
  "include": ["./**/*.ts", "./**/*.d.ts", "./**/*.vue", "../common/**/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
